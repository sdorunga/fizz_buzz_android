<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#C6E872"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.stefandorunga.myapplication.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:text="26 High Score"
            android:textSize="20sp"
            android:textColor="@color/infoTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:text="3/5"
            android:textSize="20sp"
            android:textColor="@color/infoTextColor"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_margin="36dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/numberAnswer"
                android:text="0"
                android:textSize="@dimen/answer_button_font_size"
                android:textColor="@color/answer_button_font_color"
                android:background="@drawable/layout_bg"
                android:layout_marginRight="@dimen/answer_button_margin"
                android:layout_marginBottom="@dimen/answer_button_margin"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:typeface="normal" />
            <Button
                android:id="@+id/fizzAnswer"
                android:text="Fizz"
                android:textSize="@dimen/answer_button_font_size"
                android:textColor="@color/answer_button_font_color"
                android:background="@drawable/layout_bg"
                android:layout_marginLeft="@dimen/answer_button_margin"
                android:layout_marginBottom="@dimen/answer_button_margin"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:typeface="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/buzzAnswer"
                android:text="Buzz"
                android:textSize="@dimen/answer_button_font_size"
                android:textColor="@color/answer_button_font_color"
                android:background="@drawable/layout_bg"
                android:layout_marginRight="@dimen/answer_button_margin"
                android:layout_marginTop="@dimen/answer_button_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:typeface="normal" />
            <Button
                android:id="@+id/fizzBuzzAnswer"
                android:text="FizzBuzz"
                android:textSize="@dimen/answer_button_font_size"
                android:textColor="@color/answer_button_font_color"
                android:layout_marginLeft="@dimen/answer_button_margin"
                android:layout_marginTop="@dimen/answer_button_margin"
                android:background="@drawable/layout_bg"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:typeface="normal" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1">
        <Button
            android:text="How To Play"
            android:textSize="20sp"
            android:textColor="@color/navigationButtonColor"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="left"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/restartGame"
            android:text="Play Again"
            android:textSize="20sp"
            android:textColor="@color/navigationButtonColor"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
